# Supabase
# Encontrado em: Project Settings > API
NEXT_PUBLIC_SUPABASE_URL="YOUR_SUPABASE_URL"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"

# Database (String de conexão do Supabase)
# Encontrado em: Project Settings > Database > Connection string
DATABASE_URL="YOUR_SUPABASE_CONNECTION_STRING"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Upload
UPLOAD_MAX_SIZE="5242880" # 5MB em bytes

# Email (para recuperação de senha)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@allgomenu.com"

# App
APP_NAME="AllGoMenu"
APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW="900000" # 15 minutos em ms
RATE_LIMIT_MAX_REQUESTS="100" 